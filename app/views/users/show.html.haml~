
%div{style: "text-align:center"}
  %h2 Profile for #{@user.firstName} #{@user.lastName}
  %hr
  %body
    Profile Information
    %ul#details
      %li Email: #{@user.email}
      %li Birthday: #{@user.birthday}
    
    %br
    Wall Posts
    %table.text-center{ :align => 'center', :width => 800, 'border' => 0, 'cellpadding' => 5, 'cellspacing' => 5 }
      %thead
        %tr
          %th.text-center Posted By
          %th.text-center Post
      
      %tbody
        - if(@wallposts != nil)
          - @wallposts.each do |post|
            - temp = User.find(:first, :conditions => {:id => post.owner_id})
            %tr
              %td= link_to '{temp.firstName temp.lastName}', user_path(post.owner_id)
              %td= post.content
        - else
          %tr
            %td No
            %td Posts

  %br
  %a=link_to "Post on Wall", {:action => 'new', :controller => 'wallposts', :email => @user.email}

  %br
  %a=link_to "News Feed", '/users'

  %br
  %a=link_to "Edit Profile", '/edit_profile', :method => :get

  %br
  %a=link_to "Search for friends", {:action => 'new', :controller => 'search'}

  %br
  %a=link_to "Log out", '/signout', :method => :delete
